<style>
  .es-aia-ind .es-div-cont.es-dc3 {
    margin-bottom: 2rem;
    height: 6rem;
    overflow: hidden;
  }
  .es-aia-ind .es-div-row {
    margin: 0 1rem 2rem;
  }
  .es-aia-ind i {
    display: block;
    vertical-align: middle;
    width: 50px;
    height: 50px;
    line-height: 50px;
    background: #1d3961;
    text-align: center;
    color: #fff;
    border-radius: 50%;
    font-size: 2.2rem;
    margin-right: 1rem;
  }
  .es-aia-ind h3 {
    display: table-cell;
    padding: 6px 9px 6px;
    vertical-align: middle;
    color: #1d3961;
  }
  span.aia-icon {
    display: table-cell;
    vertical-align: middle;
  }
